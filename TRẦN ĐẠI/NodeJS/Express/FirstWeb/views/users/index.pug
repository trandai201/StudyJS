extends ../layouts/common.pug
block content
    
    .row 
        .col-md-1
        .col-md-10
            h1 user 
            div 
                a.btn.btn-light(href="/users/create" ) Click Here to Create User
           
            -var t = key;
                form(action="/users/search" ,method="GET" ,class= "" style="margin-top :10px") 
                    <div class="form-row align-items-center row">
                        .col-md-6
                        
                            input#inlineFormInput.form-control.mb-2(type='text', placeholder='Jane Doe' ,name= "name")
                        .col-auto
                            button.btn.btn-primary.mb-2(type='submit') Submit

                    
                .row 
                    table.table
                        thead
                            tr
                                th(scope='col') ID
                                th(scope='col') Name
                                th(scope='col') Phone
                                th(scope='col') Action
                              
                        tbody
                           
                    
                            each user  in users
                                tr
                                    th=  user.id
                                    td=user.name
                                    th=user.phone
                                    th 
                                        a.btn.btn-light(href='/users/' + user.id) View
        .col-md-1


        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js', integrity='sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js', integrity='sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF', crossorigin='anonymous')
